
@model IEnumerable<ForFunBook.Models.Book>

<h2>Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Category</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Books" asp-route-id="@book.BookId">Edit the Book</a> |
                        <a asp-action="Cancel" asp-controller="Books" asp-route-id="@book.BookId">Delete the Book</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No books available.</p>
        }
        
    </tbody>
    <a asp-action="Create" asp-controller="Books">Add new Book</a>
</table>